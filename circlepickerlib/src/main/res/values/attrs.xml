<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CirclePickerView">
        <!-- Wheel related attributes -->
        <attr name="wheelRadius" format="dimension"/>
        <attr name="wheelStrokeWidth" format="dimension"/>
        <attr name="wheelActiveColor" format="color"/>
        <attr name="wheelBackgroundColor" format="color"/>

        <!-- Divider related attributes -->
        <attr name="showDivider" format="boolean"/>
        <attr name="dividerColor" format="color"/>
        <attr name="dividerWidth" format="dimension"/>

        <!-- Pointer related attributes -->
        <attr name="showPointer" format="boolean"/>
        <attr name="pointerRadius" format="dimension"/>
        <attr name="pointerColor" format="color"/>
        <attr name="pointerHaloColor" format="color"/>
        <attr name="pointerHaloWidth" format="dimension"/>

        <!-- Text related attributes -->
        <attr name="showValueText" format="boolean"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>

        <!-- Misc attributes -->
        <attr name="max" format="float" />
        <attr name="min" format="float" />
        <attr name="cycleValue" format="float">
            <enum name="auto" value="0" />
        </attr>
        <attr name="step" format="float"/>
        <attr name="value" format="integer"/>
        <attr name="zeroOffset" format="integer"/>
        <attr name="interactive" format="boolean"/>
    </declare-styleable>
</resources>